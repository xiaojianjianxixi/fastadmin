        <label for="c-groupid" class="control-label col-xs-12 col-sm-2">{:__('Groupid')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-groupid" required="" class="form-control" name="row[groupid]" type="number">
        </div>
    </div>
    <div class="form-group">
        <label for="c-tagid_list" class="control-label col-xs-12 col-sm-2">{:__('Tagid_list')}:</label>
