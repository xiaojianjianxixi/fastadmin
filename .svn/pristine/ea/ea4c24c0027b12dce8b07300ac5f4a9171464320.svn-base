        <div class="col-xs-12 col-sm-8">
            <input id="c-subscribe" required="" class="form-control" name="row[subscribe]" type="number">
        </div>
    </div>
    <div class="form-group">
        <label for="c-appID" class="control-label col-xs-12 col-sm-2">{:__('AppID')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-appID" required="" class="form-control" name="row[appID]" type="text">
        </div>
    </div>
    <div class="form-group hide layer-footer">
        <label class="control-label col-xs-12 col-sm-2"></label>
        <div class="col-xs-12 col-sm-8">
            <button type="submit" class="btn btn-success btn-embossed">{:__('OK')}</button>
            <button type="reset" class="btn btn-default btn-embossed">{:__('Reset')}</button>
        </div>
    </div>
</form>
