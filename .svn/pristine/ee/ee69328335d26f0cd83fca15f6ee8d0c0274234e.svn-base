<form id="add-form" class="form-horizontal form-ajax" role="form"  method="POST" action="{url('usercenter.Appvar/Appadds')}">
    <div class="form-group">
        <label for="c-upyun" class="control-label col-xs-12 col-sm-2">版本号:</label>
        <div class="col-xs-12 col-sm-8">
            <input type="text" name="ver_no" id="ver_no" class="form-control" />
        </div>
    </div>
    <div class="form-group">
         <label for="c-upyun" class="control-label col-xs-12 col-sm-2">平台:</label>
         <div class="col-xs-12 col-sm-8">
                <select class="btn dropdown-toggle btn-default" id="platform" name="platform">
                    <option class="filter-option pull-left" value="0">Android</option>
                    <option class="filter-option pull-left" value="1">IOS</option>
                    <option class="filter-option pull-left" value="2">其他</option>
                </select>
         </div>
    </div>    
    <div class="form-group">
        <label for="c-upyun" class="control-label col-xs-12 col-sm-2">上传APK:</label>
        <div class="col-xs-12 col-sm-8">
            <input type="text" name="apk_path" id="apk_path" readonly="readonly" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label for="c-upyun" class="control-label col-xs-12 col-sm-2"></label>
        <div class="col-xs-12 col-sm-8">
            <button id="plupload-upyun" class="btn btn-danger plupload" data-input-id="c-upyun" data-url="{:url('usercenter.Appvar/upfaileapk')}"><i class="fa fa-upload"></i> {:__("上传 APK")}</button>
        </div>
    </div>

    <div class="form-group">
        <label for="c-local" class="control-label col-xs-12 col-sm-2">版本XML:</label>
        <div class="col-xs-12 col-sm-8">
            <input type="text" name="xml_path" id="xml_path" readonly="readonly" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label for="c-local" class="control-label col-xs-12 col-sm-2"></label>
        <div class="col-xs-12 col-sm-8">
            <button id="plupload-local" class="btn btn-primary plupload" data-input-id="c-local" data-url="{:url('usercenter.Appvar/upfailexml')}"><i class="fa fa-upload"></i> {:__("上传 XML")}</button>
        </div>
    </div>
        <div class="form-group">
        <label for="c-local" class="control-label col-xs-12 col-sm-2">其他文件:</label>
        <div class="col-xs-12 col-sm-8">
            <input type="text" name="others_path" readonly="readonly"  id="others_path" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label for="c-local" class="control-label col-xs-12 col-sm-2"></label>
        <div class="col-xs-12 col-sm-8">
            <button id="plupload-other" class="btn btn-primary plupload" data-input-id="c-local-2" data-url="{:url('usercenter.Appvar/upotherfaile')}"><i class="fa fa-upload"></i> {:__("上传其他文件")}</button>
        </div>
    </div>
    <div class="form-group">
        <label for="c-local" class="control-label col-xs-12 col-sm-2">{:__('本次版本更新内容')}:</label>
        <div class="col-xs-12 col-sm-8">
            <textarea name="intro" id="intro" cols="60" rows="5" class="summernote"></textarea>
        </div>
    </div>
    <div class="form-group hidden layer-footer">
        <div class="col-xs-2"></div>
        <div class="col-xs-12 col-sm-8">
            <span type="submit" id="tijiao" class="btn btn-success">提交</span>
            <button type="reset" class="btn btn-default btn-embossed">{:__('Reset')}</button>
        </div>
    </div>
</form>

    


